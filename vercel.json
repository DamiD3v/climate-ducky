{
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/Api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/Client/index.html"
        }
    ],
    "builds": [
        {
            "src": "Api/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "Client/package.json",
            "use": "@vercel/static-build"
        }
    ]
}